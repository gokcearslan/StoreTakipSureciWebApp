@model twotableversion.Models.UygulamalarModel
@using (Html.BeginForm("Edit", "Home", FormMethod.Post))
{
  




    <input type="hidden" asp-for="RowVersion" />

    <a href="/Home/DisplayData" style="color:#e68a06;  margin-top:30px; margin-left:opx;">GERİ</a>

    <table width="40%">
   
        <tr>
            <td style=" width:20%">Version:</td>
            <td style="width:80%">
                @Html.TextBoxFor(m=>m.version,new{@class="form-control"})
            </td>
        </tr>
        <tr>
            <td style=" width:20%">Etki Alanı:</td>
            <td style="width:80%">
                @Html.TextBoxFor(m=>m.EtkiAlanı,new{@class="form-control"})
            </td>
        </tr>

        <tr>
            <td style=" width:20%">Talep/Bug:</td>
            <td style="width:80%">
                @Html.TextBoxFor(m=>m.TalepBug,new{@class="form-control"})
            </td>
        </tr>

        <tr>
            <td style=" width:20%">Talep Adı:</td>
            <td style="width:80%">
                @Html.TextBoxFor(m=>m.TalepAdi,new{@class="form-control"})
            </td>
        </tr>

        <tr>
            <td style=" width:20%">Bulgu Durumu:</td>
            <td style="width:80%">
                @Html.TextBoxFor(m=>m.BulguDurumu,new{@class="form-control"})
            </td>
        </tr>


        <tr>
            <td style=" width:20%">Segment:</td>
            <td style="width:80%">
                @Html.TextBoxFor(m=>m.Segment,new{@class="form-control"})
            </td>
        </tr>

        <tr>
            <td style="width:20%">KKTYE Gönderildi mi?:</td>
            <td style="width:80%">
                <select name="KKTYeGonderilme" style="width: 100%;" id="kktyeGonderildiSelect">
                    <option value=" " ;"></option>
                    <option value="EVET" style="background-color:green;">EVET</option>
                    <option value="HAYIR" style="background-color:red;">HAYIR</option>

                </select>
            </td>
        </tr>

        <tr>
            <td style="width:20%">KKT Onayı Alındı mı:</td>
            <td style="width:80%">
                <select name="KKTOnayi" style="width: 100%;" id="kktOnayiSelect">
                    <option value=" " ;"></option>
                    <option value="EVET" style="background-color:green;">EVET</option>
                    <option value="HAYIR" style="background-color:red;">HAYIR</option>
                </select>
            </td>
        </tr>

        <tr>
            <td style=" width:20%">Notlar:</td>
            <td style="width:80%">
                @Html.TextBoxFor(m=>m.Notlar,new{@class="form-control"})
            </td>
        </tr>

        <tr>
            <td style=" width:20%">İlgili Analist:</td>
            <td style="width:80%">
                @Html.TextBoxFor(m=>m.Analist,new{@class="form-control"})
            </td>
        </tr>

        <tr>
            <td style=" width:20%">Merge Durumu IOS:</td>
            <td style="width:80%">
                @Html.TextBoxFor(m=>m.mergeIOS,new{@class="form-control"})
            </td>
        </tr>

        <tr>
            <td style=" width:20%">Merge Durumu Android:</td>
            <td style="width:80%">
                @Html.TextBoxFor(m=>m.mergeAND,new{@class="form-control"})
            </td>
        </tr>

        <tr>
            <td style=" width:20%">Merge Durumu BE:</td>
            <td style="width:80%">
                @Html.TextBoxFor(m=>m.mergeBE,new{@class="form-control"})
            </td>
        </tr>

        <tr>
            <td style=" width:20%">İlgili IOS Developer:</td>
            <td style="width:80%">
                @Html.TextBoxFor(m=>m.IOSDev,new{@class="form-control"})
            </td>
        </tr>

        <tr>
            <td style=" width:20%">İlgili Android Developer:</td>
            <td style="width:80%">
                @Html.TextBoxFor(m=>m.ANDDev,new{@class="form-control"})
            </td>
        </tr>

        <tr>
            <td style=" width:20%">İlgili Be Developer:</td>
            <td style="width:80%">
                @Html.TextBoxFor(m=>m.BEDev,new{@class="form-control"})
            </td>
        </tr>

        <tr>
            <td style=" width:20%"> BE Taşıma Katmanları:</td>
            <td style="width:80%">
                @Html.TextBoxFor(m=>m.TasimaKatmanlari,new{@class="form-control"})
            </td>
        </tr>

        <tr>
            <td style=" width:20%">Geçiş Zorunluluğu:</td>
            <td style="width:80%">
                @Html.TextBoxFor(m=>m.GecisZorunluluğu,new{@class="form-control"})
            </td>
        </tr>



        <tr>
            <td style=" width:20%">UI/API Senaryo ID:</td>
            <td style="width:80%">
                @Html.TextBoxFor(m=>m.SenaryoID,new{@class="form-control"})
            </td>
        </tr>

    </table>


   
    <button type="submit" class="btn btn-primary" style="background-color: #FFCA4F; color: white; margin-top:0px ; margin-left:0px">Save</button>
    <form asp-action="CancelEdit" asp-controller="Home" method="post">
        <input type="hidden" asp-for="satırId" value="@Model.satırId" />
        <button type="submit" class="btn btn-danger">Cancel Edit</button>
    </form>





}


<script>
    // JavaScript function to update the background color of the select boxes
    function updateSelectBackgroundColor(selectId) {
        const select = document.getElementById(selectId);
        const selectedOption = select.options[select.selectedIndex];
        const backgroundColor = window.getComputedStyle(selectedOption).backgroundColor;
        select.style.backgroundColor = backgroundColor;
    }

    // Listen to the change event for each select element
    document.getElementById("kktyeGonderildiSelect").addEventListener("change", function () {
        updateSelectBackgroundColor("kktyeGonderildiSelect");
    });

    document.getElementById("kktOnayiSelect").addEventListener("change", function () {
        updateSelectBackgroundColor("kktOnayiSelect");
    });

    // Initially set the background color based on the selected options
    updateSelectBackgroundColor("kktyeGonderildiSelect");
    updateSelectBackgroundColor("kktOnayiSelect");
</script>
