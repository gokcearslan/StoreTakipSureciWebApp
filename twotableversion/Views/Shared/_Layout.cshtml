<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - twotableversion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/twotableversion.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="width: 100%; height: 100%; background-color: #FCB000; border-bottom: 1px solid #ddd; box-shadow: 0px 1px 4px rgba(0, 0, 0, 0.1); margin-bottom: 20px;">

            <div class="container-fluid" style="width: 100%; height: 100%; /*background: #FCB000; */ font-family: Roboto;">   

               <img src="~/images/Vakıfbank-logo.svg.png" alt="VakıfBank Image" width="300" height="100%" />

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" >
                    <ul class="navbar-nav flex-grow-1" style= "margin-top:50px; margin-left:25px";>
                       
                        <li class="nav-item" >
                            <a class="nav-link text-dark" style="margin-left:17px;" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                       @* <li class="nav-item" >
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Uygulamalar">FilterData</a>
                        </li>*@
                    </ul>

                </div>
            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light" style="width: 100%; height: 100%; background-color: #FCB000; border-bottom: 1px solid #ddd; box-shadow: 0px 1px 4px rgba(0, 0, 0, 0.1); margin-bottom: 20px;">

    @*    <div class="container">
            &copy; 2023 - twotableversion - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>*@
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
